@model Model.EF.Contact
@{ ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    #mapCanvas {
        height: 600px;
    }
</style>
@section jsFooter{
    
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6">
                <h2>Thông tin liên hệ</h2>
                @Html.Raw(Model.Content)

                <br />
                <h2>Gửi thông tin</h2>
                @using (Html.BeginForm("Send","Contact",FormMethod.Post))
                {
                <div class="form-group">
                    <label>Họ tên</label>
                    <input type="text" name="txtName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    <input type="text" name="txtMobile" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" name="txtAddress" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="txtEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Yêu cầu</label>
                    <textarea name="txtContent" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Gửi đi</button>
            }

            </div>
            <div class="col-md-6">
                <h2>Bản đồ</h2>
                <div class="mapouter">
                    <div class="gmap_canvas"><iframe width="600" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=ho%C3%A0ng%20qu%E1%BB%91c%20vi%E1%BB%87t&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://embedgooglemap.net/171/"></a></div>
                    <style>
                        .mapouter {
                            position: relative;
                            text-align: right;
                            height: 500px;
                            width: 600px;
                        }

                        .gmap_canvas {
                            overflow: hidden;
                            background: none !important;
                            height: 500px;
                            width: 600px;
                        }
                    </style>
                </div>

                
            </div>
        </div>
    </div>
</div>
