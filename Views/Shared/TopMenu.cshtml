@model List<Model.EF.Menu>
@using OnLineShop_1.Common;
<div class="call">
    <p><span>Need help?</span> call us <span class="number">1-22-3456789</span></span></p>
</div>
<div class="account_desc">
    @{ var session = (UserLogin)Session[OnLineShop_1.Common.CommonContants.USER_SEESION]; }
    @if (session == null)
    {
       <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
             }

        </ul> }
    else{
            <ul>
                <li>Xin chào:@session.UserName</li>
                <li>@Html.ActionLink("Đăng xuất", "Logout", "User")</li>
            </ul>
    }

</div>
<div class="clear"></div>
